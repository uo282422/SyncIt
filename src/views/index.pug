    script.
        function validarUsuario() {
                const input = document.getElementById('texto');
                const errorText = document.getElementById('error-texto');
                const regex = /^[a-zA-Z0-9]+$/;

                if (input.value === '' || !regex.test(input.value)) {
                errorText.style.display = 'inline';
                return false;
                } else {
                errorText.style.display = 'none';
                return true;
                }
        }
        document.getElementById('texto').addEventListener('input', function () {
            validarUsuario();
        });
        function generateCalendar(month, year) { 
            const calendarHeader = document.getElementById('calendar-header');
            const calendarGrid = document.getElementById('calendar-grid');

            // Elimina los d√≠as previos (debe eliminar todo excepto los nombres de los d√≠as)
            while (calendarGrid.children.length > 7) {
                calendarGrid.removeChild(calendarGrid.lastChild);
            }

            const monthNames = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"];
            calendarHeader.textContent = `${monthNames[month]} ${year}`;

            const firstDay = new Date(year, month, 1).getDay();
            const startingDay = firstDay === 0 ? 6 : firstDay - 1;
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            // A√±ade espacios vac√≠os para los d√≠as previos al primer d√≠a del mes
            for (let i = 0; i < startingDay; i++) {
                const emptyCell = document.createElement('div');
                emptyCell.classList.add('empty');
                calendarGrid.appendChild(emptyCell);
            }

            // A√±ade los d√≠as del mes
            for (let day = 1; day <= daysInMonth; day++) {
                const dayCell = document.createElement('div');
                dayCell.classList.add('day-cell');
                dayCell.setAttribute('data-day', day); // A√±ade un atributo de datos para identificar la casilla
                dayCell.addEventListener('click', () => addSquare(day));

                const dayNumber = document.createElement('div');
                dayNumber.classList.add('day-number');
                dayNumber.textContent = day;

                const colorContainer = document.createElement('div');
                colorContainer.classList.add('color-container');

                dayCell.appendChild(dayNumber);
                dayCell.appendChild(colorContainer);
                calendarGrid.appendChild(dayCell);
            }

            // A√±ade espacios vac√≠os para completar la √∫ltima fila del calendario
            const totalCells = startingDay + daysInMonth;
            const emptyCellsAtEnd = (7 - (totalCells % 7)) % 7;
            for (let i = 0; i < emptyCellsAtEnd; i++) {
                const emptyCell = document.createElement('div');
                emptyCell.classList.add('empty');
                calendarGrid.appendChild(emptyCell);
            }
        }

        // Obtiene la fecha actual y genera el calendario
        const today = new Date();
        const currentMonth = today.getMonth();
        const currentYear = today.getFullYear();
        generateCalendar(currentMonth, currentYear);
        
        
        


        
