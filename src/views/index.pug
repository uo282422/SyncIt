            });

            //console.log("Leyenda actualizada");
            document.getElementById('texto').value= ""
            document.getElementById('colorPicker').value="#ffffff"
        }
        function deleteUser(userId) {
            fetch(`/user/${userId}`, {
                method: 'DELETE',
            })
            .then(response => {
                 if (!response.ok) {
                        throw new Error('Error en la respuesta' + response.statusText);
                }
                
                delete userDict[userId];
                actualizarLeyenda()
                loadDates()
                
            })
            .catch(error => {
                console.error('Error:', error);
            });
            
        }
        function removeColorSquare(day, color) {
            const dayCell = document.querySelector(`.day-cell[data-day='${day}']`);
            if (dayCell) {
                const colorContainer = dayCell.querySelector('.color-container');
                const colorSquares = colorContainer.querySelectorAll('.color-square');
                
                colorSquares.forEach(colorSquare => {
                    if (colorSquare.style.backgroundColor === color) {
                        colorContainer.removeChild(colorSquare);
                    }
                });
            }
        }
        function removeAllColorSquares() {
           const colorContainers = document.querySelectorAll('.color-container');
            colorContainers.forEach(container => {
            const colorSquares = container.querySelectorAll('.color-square');
            colorSquares.forEach(square => square.remove());
        });
        }
